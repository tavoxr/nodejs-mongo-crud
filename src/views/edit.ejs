<%-include('partials/_header')%>

<div class="container ">


<div class="col-md-5 mx-auto">
    <div class="card">
        <div class="card-body">
            <form action="/edit/<%= task._id %>"   method="POST"> 
                <div class="form-group">
                    <input  type="text" name="title" value="<%= task.title %>"
                    placeholder="Insert a Title" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea cols="80" name="description" 
                    placeholder="Insert a Description" class="form-control"><%= task.description %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block"> 
                            Edit
                    </button>
                </div>
            </form>
        </div>
    </div>

  </div>
</div>

<%-include('partials/_footer')%>
